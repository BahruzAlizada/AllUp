            </div>

            <div class="col-lg-3">
                
            </div>
           
        </div>

    </div> <!-- container -->
</section>

<!--====== Blog Part Ends ======-->

@section Scripts{
    <script asp-append-version="true">
        let skip = 6
        let BlogCount = $("#loadMore").next().val()

        $(document).on("click", "#loadMore", function () {
            $.ajax({
                url: "/Blog/Loadmore/",
                type : "get",
                data : 
                {
                    "skipCount" : skip
                },
                success: function (res) {
                    $("#myblog").append(res);
                    skip +=6;

                    if(BlogCount <=skip){
                        $("#loadMore").remove()
                    }
                }
            });
        });
    </script>
}

