@model List<Blog>

@foreach (Blog blog in Model)
{
    <div class="col-md-6">
        <div class="single-blog-post blog-grid-post mt-30">
            <div class="blog-post-media">
                <div class="blog-image">
                    <a href="blog-single-left-sidebar.html"><img src="~/assets/images/@blog.Image" alt="blog"></a>
                </div>
            </div>
            <div class="blog-post-content">
                <h4 class="blog-title"><a href="blog-single-left-sidebar.html">@blog.Title</a></h4>
                <ul class="blog-meta">
                    <li><a href="#"><i class="fas fa-user-circle"></i>@blog.Author</a></li>
                    <li><a href="#"><i class="fas fa-calendar-alt"></i> @blog.CreatedTime.ToString("dd MMMM, yyyy")</a></li>
                </ul>
                <p>@blog.Description.Substring(0,149) ...</p>
                <a href="blog-single-left-sidebar.html" class="main-btn main-btn-2">Read More</a>
            </div>
        </div> <!-- single blog post -->
    </div>
}
