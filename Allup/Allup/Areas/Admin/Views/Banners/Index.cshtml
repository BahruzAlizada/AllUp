@model List<Banner>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
	<div class="card-header" style="display:flex;justify-content:space-between">
		<h2>
			Banners
		</h2>
		<div>
			<a asp-action="Create" class="btn btn-primary rounded-pill text-white" style="margin-right:10px">Create</a>
		</div>
	</div>
	<div class="card-body">
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Image</th>
						<th style="text-align:center">Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (Banner item in Model)
					{
						<tr>

							<td style="text-align:center;">
								<img src="~/assets/images/@item.Image" style="height:100px;width:190px; object-fit:cover; border-radius:0px;">
							</td>

							<td style="text-align:center">
								@if (item.IsDeactive)
								{
									<span style="padding:4px 6px; background-color:red;color:white">Deactive</span>
								}
								else
								{
									<span style="padding:4px 6px; background-color:green;color:white">Active</span>
								}
							</td>

							<td>
								<div style="display:flex;justify-content:flex-end">
									@if (item.IsDeactive)
									{
										<a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success rounded-pill text-white" style="margin-right:10px">Activate</a>
									}
									else
									{
										<a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger rounded-pill text-white" style="margin-right:10px">Deactivate</a>
									}
									<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info rounded-pill text-white" style="margin-right:10px">Update</a>
									<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded-pill text-white" style="margin-right:10px">Delete</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />